{
  "name": "ts-template",
  "version": "0.0.1",
  "description": "My personal nodejs setup for typescript projects",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "npm run style:check && jest --verbose --projects ./test --runInBand",
    "worker": "ts-node worker/populate-db.worker.ts",
    "migrate": "ts-node worker/migrate.worker.ts"
  },
  "author": "Felipe Amorim",
  "license": "GPL-3",
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.22",
    "@types/supertest": "2.0.10",
    "jest": "26.6.3",
    "nodemon": "2.0.4",
    "prettier": "2.2.1",
    "supertest": "6.1.1",
    "ts-jest": "26.4.4",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "@overnightjs/core": "1.7.5",
    "@overnightjs/logger": "1.2.0",
    "body-parser": "1.19.0",
    "cors": "^2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "pg": "8.5.1",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.30"
  }
}
